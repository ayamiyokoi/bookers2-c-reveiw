<div class='container px-5 px-sm-0'>
  <h2>Event Mail</h2>
  <%= form_with model:@event, local:true do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
  <% end %>
</div>